@model Personas

@{
    ViewData["Title"] = "Editar Usurios";
}


<h1>Usuarios</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Persona" asp-action="Editar">
    <div class="mb-3">
        <label asp-for="idPerson" class="form-label"></label>
        <input asp-for="idPerson" class="form-control" />
        <span asp-validation-for="idPerson" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Area_idArea" class="form-label"></label>
        <input asp-for="Area_idArea" class="form-control" />
        <span asp-validation-for="Area_idArea" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PersonType_idPersonType" class="form-label"></label>
        <input asp-for="PersonType_idPersonType" class="form-control" />
        <span asp-validation-for="PersonType_idPersonType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="description" class="form-label"></label>
        <input asp-for="description" class="form-control" />
        <span asp-validation-for="description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="firstname" class="form-label"></label>
        <input asp-for="firstname" class="form-control" />
        <span asp-validation-for="firstname" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="lastname" class="form-label"></label>
        <input asp-for="lastname" class="form-control" />
        <span asp-validation-for="lastname" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="codeSecondary" class="form-label"></label>
        <input asp-for="codeSecondary" class="form-control" />
        <span asp-validation-for="codeSecondary" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="active" /> @Html.DisplayNameFor(model => model.active)
            </label>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
