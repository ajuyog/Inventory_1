@model Inventory_1.Models.Elementos

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Elementos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idElement" class="control-label"></label>
                <input asp-for="idElement" class="form-control" />
                <span asp-validation-for="idElement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementType_idElementType" class="control-label"></label>
                <input asp-for="ElementType_idElementType" class="form-control" />
                <span asp-validation-for="ElementType_idElementType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Element_idElement" class="control-label"></label>
                <input asp-for="Element_idElement" class="form-control" />
                <span asp-validation-for="Element_idElement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="codeSecondary" class="control-label"></label>
                <input asp-for="codeSecondary" class="form-control" />
                <span asp-validation-for="codeSecondary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="active" /> @Html.DisplayNameFor(model => model.active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Ver Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
