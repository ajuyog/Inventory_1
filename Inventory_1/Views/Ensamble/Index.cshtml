@model IEnumerable<Ensamblajes>
@{
    ViewData["Title"] = "LIsta Ensambles";
}

<h1>Ensambles</h1>

<a asp-action="CrearEnsamble" class="btn btn-primary mb-3">Nuevo</a>

<table class="table">
    <thead>
        <tr>
            <th>Funciones</th>
            <th>Elemento</th>
            <th>Ensamble</th>
            <th>No. Serial</th>
            <th>Cod. Secundario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ensambles in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-Assembly_idAssembly="@ensambles.Assembly_idAssembly">Editar</a>
                    <a class="btn btn-secondary" asp-controller="Asignacion" asp-action="CrearAsignacion">Asignar</a>
                </td>
                <td>
                    @ensambles.Element_idElement
                </td>
                <td>
                    @ensambles.Assembly_idAssembly
                </td>
                <td>
                    @ensambles.serialnumber
                </td>
                <td>
                    @ensambles.codSecondary
                </td>
            </tr>
        }
    </tbody>
</table>
